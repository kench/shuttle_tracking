source 'http://rubygems.org'

gem 'rails', '3.0.10'

gem "sqlite3", :require => "sqlite3",  :group => [:development, :test]
gem "mysql", :require => "mysql",  :group => [:production]

# God monitors the auto-updater script. 
# You can comment it out if you don't use that.
gem 'god'

# Authentication
gem 'devise'
gem 'devise_cas_authenticatable', :git => "git://github.com/bamnet/devise_cas_authenticatable.git"

# Authorization
gem 'cancan'

# Used convert seconds into a human duration.
gem 'chronic_duration'

#rmagick is used to rotate the shuttle icon
gem 'rmagick', '2.12.2'

# Compress JS and CSS
gem 'jammit'

# Use RedCloth to format text
gem 'RedCloth'

# Use kaminari for pagination
gem 'kaminari'
